Subject: [PATCH] debug marker api


diff --git a/src/main/java/org/bukkit/entity/Player.java b/src/main/java/org/bukkit/entity/Player.java
index 8bf04a0ad920fa580568713b243c20c448435908..3a97eb9b93e347d81aa4b30016e2a50ff2a88a03 100644
--- a/src/main/java/org/bukkit/entity/Player.java
+++ b/src/main/java/org/bukkit/entity/Player.java
@@ -2832,5 +2832,51 @@ public interface Player extends HumanEntity, Conversable, OfflinePlayer, PluginM
      * @return True if fall damage is enabled when {@link #getAllowFlight()} is true
      */
     public boolean hasFlyingFallDamage();
+
+    /**
+     * Creates debug block highlight on specified block location. Clients may be inconsistant in displaying it.
+     * @param location Location to highlight
+     * @param text Text to show above the highlight
+     * @param time Time after which highlight will expire in milliseconds
+     * @param color RGB int. Will be ignored on some versions of vanilla client
+     */
+    public void sendBlockHighlight(@NotNull Location location, @NotNull String text, int time, int color);
+
+    /**
+     * Creates debug block highlight on specified block location. Clients may be inconsistant in displaying it.
+     * @param location Location to highlight
+     * @param time Time after which highlight will expire in milliseconds
+     * @param color RGB int. Will be ignored on some versions of vanilla client
+     */
+    public void sendBlockHighlight(@NotNull Location location, int time, int color);
+
+    /**
+     * Creates debug block highlight on specified block location. Clients may be inconsistant in displaying it.
+     * @param location Location to highlight
+     * @param time Time after which highlight will expire in milliseconds
+     * @param color Color of the highlight. Will be ignored on some versions of vanilla client
+     * @param transparency Transparency of the highlight. Values not in range of 0-255 will throw IllegalArgumentException.
+     */
+    public void sendBlockHighlight(@NotNull Location location, int time, @NotNull org.bukkit.Color color, int transparency);
+
+    /**
+     * Creates debug block highlight on specified block location. Clients may be inconsistant in displaying it.
+     * @param location Location to highlight
+     * @param text Text to show above the highlight
+     * @param time Time after which highlight will expire in milliseconds
+     */
+    public void sendBlockHighlight(@NotNull Location location, @NotNull String text, int time);
+
+    /**
+     * Creates debug block highlight on specified block location. Clients may be inconsistant in displaying it.
+     * @param location Location to highlight
+     * @param time Time after which highlight will expire in milliseconds
+     */
+    public void sendBlockHighlight(@NotNull Location location, int time);
+
+    /**
+     * Clears all debug block highlights created by Player#sendBlockHighlight.
+     */
+    public void clearBlockHighlights();
     // Purpur end
 }
