                 return false;
             } else {
                 if (source instanceof EntityDamageSource) {
@@ -1230,6 +1238,7 @@ public class ServerPlayer extends Player {
             }
             // Paper end
 
+            this.spawnInvulnerableTime = worldserver.purpurConfig.playerSpawnInvulnerableTicks; // Purpur
