@@ -985,6 +986,7 @@ public class PurpurWorldConfig {
         }
         pigMaxHealth = getDouble("mobs.pig.attributes.max_health", pigMaxHealth);
         pigScale = getDouble("mobs.pig.attributes.scale", pigScale);
