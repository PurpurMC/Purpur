@@ -1389,6 +1389,8 @@ public class PurpurWorldConfiguration extends ConfigurationPart {
 
         public ZombifiedPiglin zombifiedPiglin;
         public class ZombifiedPiglin extends ConfigurationPart {
+            public boolean countAsPlayerKillWhenAngry = true;
+
