From: William Blake Galbreath <blake.galbreath@gmail.com>
Date: Thu, 2 Jan 2020 11:31:36 -0600
Subject: [PATCH] Make lava flow speed configurable


diff --git a/src/main/java/net/minecraft/world/level/material/LavaFluid.java b/src/main/java/net/minecraft/world/level/material/LavaFluid.java
index 9ea5d189ecf2dbbf4619f11fe621ba0dc4d80c38..0fc587406c4a5368ca41135da62869be62ee708a 100644
--- a/src/main/java/net/minecraft/world/level/material/LavaFluid.java
+++ b/src/main/java/net/minecraft/world/level/material/LavaFluid.java
@@ -180,7 +180,7 @@ public abstract class LavaFluid extends FlowingFluid {
 
     @Override
     public int getTickDelay(LevelReader world) {
-        return world.dimensionType().ultraWarm() ? 10 : 30;
+        return world.dimensionType().ultraWarm() ? world.getWorldBorder().world.purpurConfig().blocks.lava.speed.nether : world.getWorldBorder().world.purpurConfig().blocks.lava.speed.notNether; // Purpur
     }
 
     @Override
diff --git a/src/main/java/org/purpurmc/purpur/configuration/PurpurWorldConfiguration.java b/src/main/java/org/purpurmc/purpur/configuration/PurpurWorldConfiguration.java
index bc2f9742a74b49f706cf4934825880dc203a8e0b..40ade185f61d6b3af1113d15bdb230882d129845 100644
--- a/src/main/java/org/purpurmc/purpur/configuration/PurpurWorldConfiguration.java
+++ b/src/main/java/org/purpurmc/purpur/configuration/PurpurWorldConfiguration.java
@@ -1349,6 +1349,12 @@ public class PurpurWorldConfiguration extends ConfigurationPart {
         public class Lava extends ConfigurationPart {
             public boolean allowInfinite = false;
             public int infiniteSourcesRequired = 2;
+
+            public Speed speed;
+            public class Speed extends ConfigurationPart {
+                public int nether = 10;
+                public int notNether = 30;
+            }
         }
     }
 
