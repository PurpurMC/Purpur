             player.giveExperienceLevels(-this.cost.get());
         }
 
@@ -116,6 +124,12 @@ public class AnvilMenu extends ItemCombinerMenu {
 
     @Override
     public void createResult() {
+        // Purpur start
+        bypassCost = false;
+        canDoUnsafeEnchants = false;
